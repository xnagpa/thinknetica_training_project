!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "", name: "author"}
    %title Starter Template for Bootstrap

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar"}, aria: {expanded: "false", controls: "navbar"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Overflow clone", "#", class: "navbar-brand"
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{href: "#"} Home
            %li
              %a{href: "#about"} About
            %li
              %a{href: "#contact"} Contact
            -unless user_signed_in?
              %li
                =link_to "Sign in",new_user_session_path
              %li
                =link_to "Sign up",new_user_registration_path
            -if user_signed_in?
              %li
                =link_to "Sign out", destroy_user_session_path, method: :delete
              %li
                = image_tag current_user.gravatar_url
          %ul.nav.navbar-nav.navbar-right
            %li
              = form_tag(search_path, method: "get", class: "search_form", role:"form") do

                =radio_button_tag 'search_type', 'Answer'
                = label_tag("search_type", "Answers")
                =radio_button_tag 'search_type', 'Question'
                = label_tag("search_type", "Questions")
                =radio_button_tag 'search_type', 'Comment'
                = label_tag("search_type", "Comments")
                =radio_button_tag 'search_type', 'All', checked: true
                = label_tag("search_type", "All")


                -# = label_tag("Questions", "Questions")
                -# = check_box("Questions", "validated")
                -#
                -# = label_tag("Answers", "Answers")
                -# = check_box("Answers", "validated")
                -#
                -# = label_tag("Comments", "Comments")
                -# = check_box("Comments", "validated")
                -#
                -#
                = label_tag(:search_field, "Search for:", class:"control-label")
                = text_field_tag(:search_field)


                = submit_tag("Search")


    .container
      - flash.each do |name, msg|
        = content_tag :div, class: "alert alert-#{name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do
          %button.close{type: "button", data: {dismiss: "alert"} }
            %span{aria: {hidden: "true"} } &times;
            %span.sr-only Close
          = msg
      %p.notice= notice
      %p.alert= alert
      = yield
