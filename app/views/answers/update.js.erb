<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
	//$('.answers').html('<%=j render @answer.question.answers%>');
	var s = '#answer-<%= @answer.id%> .answer_content';
	var answer_id = '#answer-<%= @answer.id%>';
	var at = '#answer-<%= @answer.id%> .attachments';

	<% if remotipart_submitted? %>
	//alert("remotipart!");
		$(answer_id).after("<%= escape_javascript(render(@answer)).gsub('&quot;', "'") %>");
		//alert("remove!!");
		$(answer_id).remove();
		
 	<%else%>
 	 	//alert("no remotipart!!!");
 		$(s).html('<%= @answer.content%>');	
 	<%end%>

  $('#edit-answer-'+<%= @answer.id%>).hide();  
  $('[data-answer-id="<%= @answer.id%>"]').show();
<%end%>

