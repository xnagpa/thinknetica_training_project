-object = answer.new_record? ? [question, answer] : answer
= semantic_form_for object, html: { id: "edit-answer-#{answer.id}"}, remote: true do |f|
 = f.inputs do
  =f.label :content, "Your answer"
  .answers_errors
  =f.text_area :content
  %br
  = f.semantic_fields_for :attachments do |a|
   = render 'answers/attachment_fields', f: a
  .links
   = link_to_add_association 'add attachment', f, :attachments, class: "btn btn-success"


 =f.submit "Save"
