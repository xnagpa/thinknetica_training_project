<% if @comment.errors.present?%>
 <% @comment.errors.full_messages.each do |message|%>
$('.comments_errors').html('<%= j message %>').css('color','red');
<%end%>
<%else%>			

		<%publish_to "/#{@commentable.class.name.downcase.pluralize}/#{@commentable.id}/comments" do%>
	 		var s = "#<%=@commentable.class.name.downcase%>-<%=@commentable.id%> .comments";
	 		$(s).append("<%=j render @comment %>");
			var form = "#comment-<%= j @commentable.class.name.downcase%>-<%=@commentable.id%>";		 
		<%end%>

		$(form).hide();
		var link = "[data-commentable-type='<%= j @commentable.class.name%>'][data-commentable-id='<%= @commentable.id%>']";

		$(link).show();
		
<%end%>	
